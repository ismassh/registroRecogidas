<div class="container-fluid">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase">Recogidas Creadas</h3>
        {{#if registros}}
        <div class="table-responsive">
            <table class="table table-bordered table-striped w-100">
                <thead class="text-center">
                    <tr class="table-dark">
                        <th>TIENDA</th>
                        <th>ARTICULO</th>
                        <th>REFERENCIA</th>
                        <th>AGENCIA</th>
                        <th>NUMERO DE ENVIO</th>
                        <th>FECHA CREACION</th>
                        <th>MOTIVO</th>
                        <th>FECHA RECEPCION</th>
                        <th>OBSERVACIONES</th>
                        <th colspan="2">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each registros}}
                    <!-- Color de fondo en verde, para saber que la recogida está cerrada -->
                    <tr class="text-center {{#if finalizado}}table-success{{/if}}">
                        <td>{{tienda}}</td>
                        <td>{{articulo}}</td>
                        <td>{{referencia}}</td>
                        <td>{{agencia}}</td>
                        <td>{{numero_envio}}</td>
                        <td>{{fecha_creacion}}</td>
                        <td>{{motivo}}</td>
                        <td>{{fecha_recepcion}}</td>
                        <td>{{observaciones}}</td>
                        <td colspan="2">
                            <div class="d-flex gap-2 justify-content-center">
                                {{#if finalizado}}
                                <a href="javascript:void(0)" class="btn btn-success disabled">
                                    <i class="bi bi-check-square"></i>
                                </a>
                                {{else}}
                                <a href="/finish/{{id}}" class="btn btn-success" data-bs-toggle="tooltip"
                                    data-bs-title="Marcar como Finalizado">
                                    <i class=" bi bi-check-square"></i>
                                </a>
                                {{/if}}
                                <a href="/edit/{{id}}" class="btn btn-warning" data-bs-toggle="tooltip"
                                    data-bs-title="Editar Registro">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/delete/{{id}}" class="btn btn-danger" data-bs-toggle="tooltip"
                                    data-bs-title="Eliminar Registro">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot class="text-center">
                </tfoot>
            </table>
        </div>
        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>Debes crear un registro</h3>
            </div>
            <div class="card-body">
                <p>Pulsa este botón para que puedas añadir un registro.</p>
                <a href="/add" class="btn btn-primary">Ir a Crear</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>